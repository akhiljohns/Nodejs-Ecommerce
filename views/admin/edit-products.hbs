<style>
    body {
        background-color: #f2f2f2;
    }

    .container {
        margin-top: 100px;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

    .btn-primary:hover {
        background-color: #0069d9;
        border-color: #006
    }

    .btn-primary:focus {
        box-shadow: 0 0 0 0.25rem rgba(38, 143, 255, 0.5);
    }

    .btn-primary:active {
        background-color: #0062cc;
        border-color: #005cbf;
    }

    .form-control:focus {
        border-color: #007bff;
        box-shadow: 0 0 0 0.25rem rgba(38, 143, 255, 0.25);
    }

    .text-center {
        margin-top: 20px;
    }

    element.style {}

    .col-md-6 {
        width: 35%
    }
</style>




<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="text-center">Edit Product</h1>
            <form action="/admin/edit-product/{{product._id}}" method="post" >
                <div class="mb-3">
                    <label for="name" class="form-label">Product Name</label>
                    <input type="text" class="form-control" id="name" name="name" value="{{product.name}}" required>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <input type="description" class="form-control" id="description" value="{{product.description}}" name="description" required>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Image url</label>
                    <input type="text" class="form-control" id="image" value="{{product.image}}" name="image" required>
                </div>
                <div class="d-grid gap-2 mb-3">
                    <button type="submit" class="btn btn-primary" action="/">Update</button>
                </div>
            </form>
        </div>
    </div>
</div>